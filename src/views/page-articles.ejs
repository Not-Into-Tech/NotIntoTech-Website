<!DOCTYPE html>
<html lang="en">
<%- include('components/head', { text: 'Articles' }) %>
<body class="bg-[#154D41]">
    
    <!-- Content Wrapper -->
    <div class="relative z-20 mt-[1.2em]">
        
        <!-- Header Website -->
        <section class="mx-[1em] p-[0.5em]">
            <%- include('components/header') %>
        </section>

        <!-- Main Content -->
        <section>
            <main>
                <!-- Hero Section -->
                <div class="mt-25 px-10 flex justify-center mb-12">
                    <div class="max-w-2xl w-full text-center">
                        <h1 class="text-white text-[3em] lg:text-[3.7em] font-bold leading-[1.2em]">
                            Latest Articles
                        </h1>
                        <p class="text-white text-[0.8em] lg:text-[1.1em] leading-[1.5em] mt-3">
                            Insights on technology, data, and innovation
                        </p>
                    </div>
                </div>

                <!-- Articles Grid -->
                <div class="px-10 flex justify-center">
                    <div class="w-full max-w-6xl">
                        <% if (articles && articles.length > 0) { %>
                            <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6 mb-12">
                                <% articles.forEach(article => { %>
                                    <a href="/articles/<%= article.slug %>" class="group block">
                                        <div class="bg-[#010C13] bg-opacity-5 backdrop-blur-sm rounded-lg overflow-hidden hover:bg-opacity-10 transition-all duration-300 h-full flex flex-col p-6 border border-white border-opacity-10">
                                            
                                            <!-- Category Badge -->

                                            <!-- Title -->
                                            <h2 class="text-white text-xl font-bold mb-3 line-clamp-2 group-hover:text-[#8EF0DD] transition-colors">
                                                <%= article.title %>
                                            </h2>

                                            <div class="mb-4">
                                                <span class="inline-block bg-[#8EF0DD] text-[#154D41] text-xs font-semibold px-3 py-1 rounded-full">
                                                    <%= article.category || 'Article' %>
                                                </span>
                                            </div>
                                            
                                            <!-- Excerpt -->
                                            <p class="text-gray-300 text-sm mb-4 line-clamp-3 flex-grow">
                                                <%= article.excerpt || article.content.substring(0, 150) %>...
                                            </p>

                                            <!-- Meta Info -->
                                            <div class="flex justify-between text-xs text-gray-400 pt-4 border-t border-white border-opacity-10">
                                                <span><%= new Date(article.publishedAt || article.createdAt).toLocaleDateString('en-US', { year: 'numeric', month: 'short', day: 'numeric' }) %></span>
                                                <span><%= article.views || 0 %> views</span>
                                            </div>
                                        </div>
                                    </a>
                                <% }); %>
                            </div>

                            <!-- Pagination -->
                            <% if (pagination.pages > 1) { %>
                                <div class="flex justify-center gap-2 mb-12">
                                    <% for (let i = 1; i <= pagination.pages; i++) { %>
                                        <% if (i === pagination.page) { %>
                                            <button class="px-4 py-2 rounded-lg bg-[#8EF0DD] text-[#154D41] font-semibold">
                                                <%= i %>
                                            </button>
                                        <% } else { %>
                                            <a href="/articles?page=<%= i %>" class="px-4 py-2 rounded-lg bg-white bg-opacity-10 text-white hover:bg-opacity-20 transition-all">
                                                <%= i %>
                                            </a>
                                        <% } %>
                                    <% } %>
                                </div>
                            <% } %>

                        <% } else { %>
                            <div class="text-center py-12">
                                <p class="text-white text-lg">No articles yet. Check back soon!</p>
                            </div>
                        <% } %>
                    </div>
                </div>

            </main>
        </section>

        <!-- Footer Website -->
        <section>
            <%- include('components/footer') %>
        </section>
        
    </div>

    <script src="/script.js"></script>

</body>
</html>